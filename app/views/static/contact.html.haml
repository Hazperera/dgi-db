#notice= notice
=content_for :title do
  =tx "title"
=content_for :header do
  %h2
    =tx "title_main"
    %small=tx "title_small"
-cache do
  .container-fluid
    .row-fluid
      .span12
        %div{style: "text-align:center; background-color: #14091b; margin-bottom: 20px;"}
          %img{:src => image_path("hosted-by_WUSM.png"), :width => "367", :height =>"45", :alt => "Washington University School of Medicine"}
          %img{:class => "logo responsive", :src => image_path("mgi_logo_shadow.png"),  :width =>"425", :height => "126", :title => "The Elizabeth H. and James S. McDonnell III Genome Institute at Washington University", :alt => "The Elizabeth H. and James S. McDonnell III Genome Institute at Washington University", :style => "height: auto;"}
        .well=tx "description"
        .well
          %h3 Current Contributors
          %dl
            -to("people").each do |p|
              %dt=p["title"]
              %dd=p["description"]&.html_safe
              -if p["link"]
                %dd=dynamic_link_to(p["link_title"], p["link"])
              -if p["email"]
                %dd=dynamic_link_to(p["email_title"], p["email"])
              %br
        .well
          %h3 Acknowledgements
          %dl
            -to("additional").each do |a|
              %dt=a["category"]
              %dd=a["people"]
              %br

