#notice= notice
=content_for :title do
  =tx "title"
=content_for :header do
  %h2
    =tx "title_main"
    %small=tx "title_small"
- cache do
  .container-fluid
    .row-fluid
      .span12
        .well=tx "description"
        .well
          %ul(class="unstyled")
            -to("links").each do |l|
              %li
                =dynamic_link_to(l["title"], l["url"])
                %small=l["description"]
